<Window x:Class="WpfApplication3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="CSGO Callout Map" Height="700" Width="700">
    <Grid>
        <TextBlock Text="Searching for Games..." FontSize="20" Foreground="{DynamicResource {x:Static SystemColors.ControlBrushKey}}"/>
    </Grid>
    <Window.Background>
        <ImageBrush Stretch="Uniform">
            <ImageBrush.ImageSource>
                <ImageSource>pack://siteoforigin:,,,/Resources/kvv97dt.jpg</ImageSource>
            </ImageBrush.ImageSource>
        </ImageBrush>
    </Window.Background>
</Window>
